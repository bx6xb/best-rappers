    body
        .hamb
            span 
            span 
            span
        include nav-bar.pug
        include header.pug
        .big-picture.hide
        section.bio-albums-gallery
            .container 
                .row 
                    .col-12 
                        .switcher 
                            img(src="../img/icons/arrow.png" alt="left arrow" title="left arrow" class="left-arrow")
