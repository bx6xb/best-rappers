block vars

doctype html 
hmtl 
    head 
        meta(charset="UTF-8" )
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title
            block title
        link(rel="icon" href="../img/icons/icon.png")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
